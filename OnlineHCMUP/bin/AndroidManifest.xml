<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.onlinehcmup"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Onlinehcmup" >
        <activity
            android:name="com.android.onlinehcmup.MainActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.onlinehcmup.LoginActivity"
            android:label="@string/action_login"
            android:noHistory="true"
            android:parentActivityName="MainActivity" >
        </activity>
        <activity
            android:name="com.android.onlinehcmup.PrivateMainActivity"
            android:label="@string/menu_main_private"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>